	//總和本卦變數之值
	var ben_biangua_sum = Number(ben_biangua_1_value) + Number(ben_biangua_2_value) + Number(ben_biangua_3_value) + Number(ben_biangua_4_value) + Number(ben_biangua_5_value) + Number(ben_biangua_6_value) ;

	//顯示爻變判斷文字
	if (Number(ben_biangua_sum) == 0)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中六爻皆不變動，以「本卦」的卦辭占斷吉凶。");
	  }
	else if (Number(ben_biangua_sum) == 1)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中有一爻變動，以「本卦」變爻的爻辭占斷吉凶。");
	  }
	else if (Number(ben_biangua_sum) == 2)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中有二爻變動，以「本卦」兩個變爻的爻辭占斷吉凶，<br />但以居上的一爻為主。");
	  }
	else if (Number(ben_biangua_sum) == 3)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中有三爻變動，以「本卦」及「之卦」的卦辭占斷吉凶，<br />本卦為主、之卦為輔。");
	  }
	else if (Number(ben_biangua_sum) == 4)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中有四爻變動，以「之卦」的兩個不變爻的爻辭占斷吉凶，<br />但以居下的一爻為主。");
	  }
	else if (Number(ben_biangua_sum) == 5)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中有五爻變動，以「之卦」的一個不變爻的爻辭占斷吉凶。");
	  }
	else if (Number(ben_biangua_sum) == 6)
	  {
	  document.getElementById("biangua").innerHTML = ("卦中六爻皆變動，分兩種情況：<br />如果筮得六爻皆為純老陽或純老陰，卦成《乾》《坤》，<br />則《乾》卦以「用九」文辭占斷，《坤》卦以「用六」文辭占斷；<br />其他六爻皆變，就用「之卦」的卦辭占斷。");
	  }
		  
	//取得本卦代碼
	benguadaima = String(bengua_6_value) + String(bengua_5_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_2_value) + String(bengua_1_value);
