////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////界面清除/////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////
function liuyao_reset(){
	godtime = 0; 
	firstgodtime = 0;
	document.getElementById('gua_view').style.display='none';
	window.location.hash = "#liuyao_set";
}
function time_reset(){
	document.getElementById('gua_view').style.display='none';
	window.location.hash = "#liuyao_set";
}
function wushu_reset(){
	document.getElementById('gua_view').style.display='none';
	window.location.hash = "#liuyao_set";
}
//回頁首
function backhome(){
	godtime = 0; 
	firstgodtime = 0;
	document.getElementById('liuyao_form').reset();
	document.getElementById('time_form').reset();
	document.getElementById('wushu_form').reset();
	document.getElementById('liuyao_set').style.display='none';
	document.getElementById('time_set').style.display='none';
	document.getElementById('number_set').style.display='none';
	document.getElementById('read_set').style.display='none';
	document.getElementById('zhouyi_read_window').style.display='none';
	document.getElementById('hero').style.height='100vh';
	document.getElementById('gua_view').style.display='none';
	document.getElementById('gua_view_readtext_set').value='666666';
	document.getElementById('readtext_set').value='666666';
	document.getElementById('guaview_read_zhouyi_read_window').style.display='none';
	document.getElementById('gua_view_guahead').style.display='none';
	document.getElementById('tab1').className  = "nav-link active show";
	document.getElementById('tab2').className  = "nav-link";
	document.getElementById('tab3').className  = "nav-link";
	document.getElementById('tab4').className  = "nav-link";
	document.getElementById('tab5').className  = "nav-link";
	document.getElementById('tab6').className  = "nav-link";
	document.getElementById('tab-1').className  = "tab-pane active show";
	document.getElementById('tab-2').className  = "tab-pane";
	document.getElementById('tab-3').className  = "tab-pane";
	document.getElementById('tab-4').className  = "tab-pane";
	document.getElementById('tab-5').className  = "tab-pane";
	document.getElementById('tab-6').className  = "tab-pane";
}
////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////求卦參照閱讀文本/////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////
function gua_view_readtext(){
	//載入表單
	var gvread_form = document.forms["gua_view_read_form"];
	var gvread_input = String(gua_view_read_form.gua_view_readtext_set.value);
	//根據值定位
	var gvread_daima = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(gvread_input);
	//輸出卦象符號＆哪些欄位要顯示
	switch (gvread_input)
	{
		case "111111":
		document.getElementById("guaview_read_ipt_gua").style.display='';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='';	
		document.getElementById("guaview_read_shiyi_div").style.display='none';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='none';
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("guaview_read_ipt_gua").style.display='';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='';	
		document.getElementById("guaview_read_shiyi_div").style.display='none';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='none';
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		case "700001":
		document.getElementById("guaview_read_basic").style.display='none';
		document.getElementById("guaview_read_baihua_basic").style.display='none';
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById("guaview_read_shiyi_div").style.display='';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='';
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/doc.svg" ;	
		break;
		case "700002":
		document.getElementById("guaview_read_basic").style.display='none';
		document.getElementById("guaview_read_baihua_basic").style.display='none';
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById("guaview_read_shiyi_div").style.display='';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='';
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700003":
		document.getElementById("guaview_read_basic").style.display='none';
		document.getElementById("guaview_read_baihua_basic").style.display='none';
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById("guaview_read_shiyi_div").style.display='';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='';	
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700004":
		document.getElementById("guaview_read_basic").style.display='none';
		document.getElementById("guaview_read_baihua_basic").style.display='none';
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById("guaview_read_shiyi_div").style.display='';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='';	
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700005":
		document.getElementById("guaview_read_basic").style.display='none';
		document.getElementById("guaview_read_baihua_basic").style.display='none';
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById("guaview_read_shiyi_div").style.display='';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='';
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "666666":
		return false;
		break;
		default:
		document.getElementById("guaview_read_basic").style.display='';
		document.getElementById("guaview_read_baihua_basic").style.display='';
		document.getElementById("guaview_read_shiyi_div").style.display='none';
		document.getElementById("guaview_read_shiyi_baihua_div").style.display='none';	
		document.getElementById("guaview_read_ipt_gua").style.display='none';
		document.getElementById("guaview_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('guaview_read_gua_pic').src = "assets/img/text_img/" + gvread_input + ".svg" ;
		break;
	};
	//顯示文本頁
	document.getElementById('gua_view_guahead').style.display='';
	document.getElementById('guaview_read_zhouyi_read_window').style.display='';
	window.location.hash = "#gua_view_guahead";
	//輸出文本
	document.getElementById("guaview_read_zhouyi_title").innerHTML = zhouyi_text[gvread_daima].title;
	document.getElementById("guaview_read_guaxiang").innerHTML = zhouyi_text[gvread_daima].guaxiang;
	document.getElementById("guaview_read_guaxiang_baihua").innerHTML = zhouyi_text[gvread_daima].guaxiang_baihua;
	document.getElementById("guaview_read_guaxiang_tuan").innerHTML = zhouyi_text[gvread_daima].guaxiang_tuan;
	document.getElementById("guaview_read_guaxiang_tuan_baihua").innerHTML = zhouyi_text[gvread_daima].guaxiang_tuan_baihua;
	document.getElementById("guaview_read_guaxiang_xiang").innerHTML = zhouyi_text[gvread_daima].guaxiang_xiang;
	document.getElementById("guaview_read_guaxiang_xiang_baihua").innerHTML = zhouyi_text[gvread_daima].guaxiang_xiang_baihua;
	document.getElementById("guaview_read_gdyd_gua").innerHTML = zhouyi_text[gvread_daima].gdyd_gua;
	document.getElementById("guaview_read_one").innerHTML = zhouyi_text[gvread_daima].one;
	document.getElementById("guaview_read_one_baihua").innerHTML = zhouyi_text[gvread_daima].one_baihua;
	document.getElementById("guaview_read_one_xiang").innerHTML = zhouyi_text[gvread_daima].one_xiang;
	document.getElementById("guaview_read_one_xiang_baihua").innerHTML = zhouyi_text[gvread_daima].one_xiang_baihua;
	document.getElementById("guaview_read_gdyd_one").innerHTML = zhouyi_text[gvread_daima].gdyd_one;
	document.getElementById("guaview_read_two").innerHTML = zhouyi_text[gvread_daima].two;
	document.getElementById("guaview_read_two_baihua").innerHTML = zhouyi_text[gvread_daima].two_baihua;
	document.getElementById("guaview_read_two_xiang").innerHTML = zhouyi_text[gvread_daima].two_xiang;
	document.getElementById("guaview_read_two_xiang_baihua").innerHTML = zhouyi_text[gvread_daima].two_xiang_baihua;
	document.getElementById("guaview_read_gdyd_two").innerHTML = zhouyi_text[gvread_daima].gdyd_two;
