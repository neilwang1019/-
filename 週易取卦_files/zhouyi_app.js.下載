//時辰起卦取公曆現時
function NowSTime() {
	var NowDate = new Date();
	var SetYear = NowDate.getFullYear();
	var SetMonth = (NowDate.getMonth()+1) > 9 ? (NowDate.getMonth()+1) : '0'+(NowDate.getMonth()+1);
	var SetDay = NowDate.getDate() > 9 ? NowDate.getDate() : '0'+NowDate.getDate();
    var SetHour = NowDate.getHours();
    document.getElementById('year-inline-range').value = SetYear;
    document.getElementById('month-inline-range').value = SetMonth;
    document.getElementById('day-inline-range').value = SetDay;
    document.getElementById('hour-inline-range').value = SetHour;
	TimeChangetime();
}

//時辰起卦運算
function time_fuction() {
	//載入表單
	var time_form_reault = document.forms["time_form"];
	
	//檢查有無正確輸入
	if (Number(year_set.value) == 0)
	{
	alert('尚未填寫年份。');
	return false;
	}
	else if (Number(month_set.value) == 0)
	{
	alert('尚未填寫月份。');
	return false;
	}
	else if (Number(date_set.value) == 0)
	{
	alert('尚未填寫日期。');
	return false;
	}
	else if (Number(hour_set.value) == 0)
	{
	alert('尚未填寫時程。');
	return false;
	}
	
	//本卦顯示時間
	var yeartext = document.getElementById("year_set");
	var monthtext = document.getElementById("month_set");
	var datetext = document.getElementById("date_set");
	var hourtext = document.getElementById("hour_set");
	//document.getElementById('syzs_title').style.display='none';
	//document.getElementById('ybzy_title').style.display='none';
	//document.getElementById('syzs_info').style.display='none';
	document.getElementById('biangua').style.display='none';
	document.getElementById("meihua_select").style.display = ''	
	document.getElementById("meihua_select").innerHTML = '所選時辰：' + yeartext.options[yeartext.selectedIndex].text + '年' + monthtext.options[monthtext.selectedIndex].text + datetext.options[datetext.selectedIndex].text + '日' + hourtext.options[hourtext.selectedIndex].text + '。';
	
	//清空變卦
	document.getElementById("bian_1").innerHTML = ("");
	document.getElementById("bian_2").innerHTML = ("");
	document.getElementById("bian_3").innerHTML = ("");
	document.getElementById("bian_4").innerHTML = ("");
	document.getElementById("bian_5").innerHTML = ("");
	document.getElementById("bian_6").innerHTML = ("");
	
	//求上下動爻
	var yao_up = (Number(year_set.value) + Number(month_set.value) + Number(date_set.value)) % 8
	var yao_down = (Number(year_set.value) + Number(month_set.value) + Number(date_set.value) + Number(hour_set.value)) % 8
	var yao_change = (Number(year_set.value) + Number(month_set.value) + Number(date_set.value) + Number(hour_set.value)) % 6
	
	//判斷上爻
	if ((yao_up) == 1)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 2)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 3)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 4)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 5)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 1;
	  }
	else if ((yao_up) == 6)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 1;
	  }
	else if ((yao_up) == 7)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 1;
	  }
	else
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 1;
	  }
	
	//判斷下爻
	if ((yao_down) == 1)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 2)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 3)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 4)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 5)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 1;
	  }
	else if ((yao_down) == 6)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 1;
	  }
	else if ((yao_down) == 7)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 1;
	  }
	else
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 1;
	  }
	  
	  //判斷動爻位置及之卦各爻代號
	  switch (yao_change)
	  	{
		case 0:				
			if ((bengua_6_value) == 0)
				{
				document.getElementById("bian_6").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = 1;
				}
			else if ((bengua_6_value) == 1)
				{
				document.getElementById("bian_6").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = 0;
				}
		break;
		case 1:				
			if ((bengua_1_value) == 0)
				{
				document.getElementById("bian_1").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = 1;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_1_value) == 1)
				{
				document.getElementById("bian_1").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = 0;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 2:				
			if ((bengua_2_value) == 0)
				{
				document.getElementById("bian_2").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = 1;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_2_value) == 1)
				{
				document.getElementById("bian_2").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = 0;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 3:				
			if ((bengua_3_value) == 0)
				{
				document.getElementById("bian_3").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = 1;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_3_value) == 1)
				{
				document.getElementById("bian_3").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = 0;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 4:				
			if ((bengua_4_value) == 0)
				{
				document.getElementById("bian_4").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = 1;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_4_value) == 1)
				{
				document.getElementById("bian_4").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = 0;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 5:				
			if ((bengua_5_value) == 0)
				{
				document.getElementById("bian_5").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = 1;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_5_value) == 1)
				{
				document.getElementById("bian_5").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = 0;
				zhigua_6_value = bengua_6_value;
				}
		break;
	}
	
	//各卦代碼
	benguadaima = String(bengua_6_value) + String(bengua_5_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_2_value) + String(bengua_1_value);
	zhiguadaima = String(zhigua_6_value) + String(zhigua_5_value) + String(zhigua_4_value) + String(zhigua_3_value) + String(zhigua_2_value) + String(zhigua_1_value);
	huguadaima = String(bengua_5_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_2_value);
	zongguadaima = String(bengua_1_value) + String(bengua_2_value) + String(bengua_3_value) + String(bengua_4_value) + String(bengua_5_value) + String(bengua_6_value);
	cuoguadaima = String(cuogua_6_value) + String(cuogua_5_value) + String(cuogua_4_value) + String(cuogua_3_value) + String(cuogua_2_value) + String(cuogua_1_value);
		
	//顯示爻象、當位與否、中正與否
	showYaoXiang ();
	//顯示文本
	document.getElementById('gua_view').style.display='';
	qiugua_resault_output();
	window.location.hash = "#gua_view";	
}

///////////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////物數起卦程序組////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////

//物數起卦取公歷現時
function WushuChangetime() {
	var NowDate = new Date();
    var h = NowDate.getHours();
    var dizhi;
    if (h >= 1 && h<3)
    	{
    		document.getElementById('wushu_hour_set').value = '2';
    		dizhi = '丑時';
    	}
    	else if (h >= 3 && h<5)
    	{
    		document.getElementById('wushu_hour_set').value = '3';
    		dizhi = '寅時';
    	}
    	else if (h >= 5 && h<7)
    	{
    		document.getElementById('wushu_hour_set').value = '4';
    		dizhi = '卯時';
    	}else if (h >= 7 && h<9)
    	{
    		document.getElementById('wushu_hour_set').value = '5';
    		dizhi = '辰時';
    	}
    	else if (h >= 9 && h<11)
    	{
    		document.getElementById('wushu_hour_set').value = '6';
    		dizhi = '巳時';
    	}
    	else if (h >= 11 && h<13)
    	{
    		document.getElementById('wushu_hour_set').value = '7';
    		dizhi = '午時';
    	}
    	else if (h >= 13 && h<15)
    	{
    		document.getElementById('wushu_hour_set').value = '8';
    		dizhi = '未時';
    	}
    	else if (h >= 15 && h<17)
    	{
    		document.getElementById('wushu_hour_set').value = '9';
    		dizhi = '申時';
    	}
    	else if (h >= 17 && h<19)
    	{
    		document.getElementById('wushu_hour_set').value = '10';
    		dizhi = '酉時';
    	}
    	else if (h >= 19 && h<21)
    	{
    		document.getElementById('wushu_hour_set').value = '11';
    		dizhi = '戌時';
    	}
    	else if (h >= 21 && h<23)
    	{
    		document.getElementById('wushu_hour_set').value = '12';
    		dizhi = '亥時';
    	}
    	else if (h == 23 || h == 0)
    	{
    		document.getElementById('wushu_hour_set').value = '1';
    		dizhi = '子時';
    	}
}

//物數起卦運算
function wushu_fuction() {
	//載入表單
	var time_form_reault = document.forms["wushu_form"];
	
	//檢查是否為大於0的菶整數
	//驗證數值有填寫
	if (Number(wushu_form.wushu_number_set.value) == 0)
	{
	alert('尚未填寫數值，請重新填入大於零之整數。');
	return false;
	}
	
	//驗證數值為整數
	if (Number(wushu_form.wushu_number_set.value)%1 != 0)
	{
	alert('數值非整數，請重新填入大於零之整數。');
	return false;
	}
	
	//驗證數值大於零
	if (Number(wushu_form.wushu_number_set.value) < 0)
	{
	alert('數值小於零，請重新填入大於零之整數。');
	return false;
	}
	
	//驗證時辰有填寫
	if (Number(wushu_form.wushu_hour_set.value) == 0)
	{
	alert('請選擇時辰。');
	return false;
	}
	
	//清空變卦
	document.getElementById("bian_1").innerHTML = ("");
	document.getElementById("bian_2").innerHTML = ("");
	document.getElementById("bian_3").innerHTML = ("");
	document.getElementById("bian_4").innerHTML = ("");
	document.getElementById("bian_5").innerHTML = ("");
	document.getElementById("bian_6").innerHTML = ("");

	//本卦顯示值
	var numbertext =Number(time_form_reault.wushu_number_set.value);
	var hourtext = document.getElementById("wushu_hour_set");
	//document.getElementById('syzs_title').style.display='none';
	//document.getElementById('ybzy_title').style.display='none';
	//document.getElementById('syzs_info').style.display='none';
	document.getElementById('biangua').style.display='none';
	document.getElementById("meihua_select").style.display = ''	
	document.getElementById("meihua_select").innerHTML = '所選數值：' + numbertext + '。</br>所選時辰：' + hourtext.options[hourtext.selectedIndex].text + '。';
	
	//求上下動爻
	var yao_up = (Number(time_form_reault.wushu_number_set.value)) % 8;
	var yao_down = (Number(time_form_reault.wushu_hour_set.value)) % 8;
	var yao_change = (Number(time_form_reault.wushu_number_set.value) + Number(time_form_reault.wushu_hour_set.value)) % 6;
	
	//判斷上爻
	if ((yao_up) == 1)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 2)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 3)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 4)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 1;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 0;
	  }
	else if ((yao_up) == 5)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 1;
	  }
	else if ((yao_up) == 6)
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 1;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 0;
	  (cuogua_4_value) = 1;
	  }
	else if ((yao_up) == 7)
	  {
	  (bengua_6_value) = 1;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 0;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 1;
	  }
	else
	  {
	  (bengua_6_value) = 0;
	  (bengua_5_value) = 0;
	  (bengua_4_value) = 0;
	  (cuogua_6_value) = 1;
	  (cuogua_5_value) = 1;
	  (cuogua_4_value) = 1;
	  }
	
	//判斷下爻
	if ((yao_down) == 1)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 2)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 3)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 4)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 1;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 0;
	  }
	else if ((yao_down) == 5)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 1;
	  }
	else if ((yao_down) == 6)
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 1;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 0;
	  (cuogua_1_value) = 1;
	  }
	else if ((yao_down) == 7)
	  {
	  (bengua_3_value) = 1;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 0;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 1;
	  }
	else
	  {
	  (bengua_3_value) = 0;
	  (bengua_2_value) = 0;
	  (bengua_1_value) = 0;
	  (cuogua_3_value) = 1;
	  (cuogua_2_value) = 1;
	  (cuogua_1_value) = 1;
	  }
	  
	//判斷動爻位置及之卦各爻代號
	switch (yao_change)
	{
		case 0:				
			if ((bengua_6_value) == 0)
				{
				document.getElementById("bian_6").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = 1;
				}
			else if ((bengua_6_value) == 1)
				{
				document.getElementById("bian_6").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = 0;
				}
		break;
		case 1:				
			if ((bengua_1_value) == 0)
				{
				document.getElementById("bian_1").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = 1;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_1_value) == 1)
				{
				document.getElementById("bian_1").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = 0;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 2:				
			if ((bengua_2_value) == 0)
				{
				document.getElementById("bian_2").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = 1;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_2_value) == 1)
				{
				document.getElementById("bian_2").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = 0;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 3:				
			if ((bengua_3_value) == 0)
				{
				document.getElementById("bian_3").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = 1;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_3_value) == 1)
				{
				document.getElementById("bian_3").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = 0;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 4:				
			if ((bengua_4_value) == 0)
				{
				document.getElementById("bian_4").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = 1;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_4_value) == 1)
				{
				document.getElementById("bian_4").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = 0;
				zhigua_5_value = bengua_5_value;
				zhigua_6_value = bengua_6_value;
				}
		break;
		case 5:				
			if ((bengua_5_value) == 0)
				{
				document.getElementById("bian_5").innerHTML = ("<font color='#cda45e'>ㄨ</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = 1;
				zhigua_6_value = bengua_6_value;
				}
			else if ((bengua_5_value) == 1)
				{
				document.getElementById("bian_5").innerHTML = ("<font color='#cda45e'>◯</font>");
				zhigua_1_value = bengua_1_value;
				zhigua_2_value = bengua_2_value;
				zhigua_3_value = bengua_3_value;
				zhigua_4_value = bengua_4_value;
				zhigua_5_value = 0;
				zhigua_6_value = bengua_6_value;
				}
		break;
	}  
	
	//各卦代碼
	benguadaima = String(bengua_6_value) + String(bengua_5_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_2_value) + String(bengua_1_value);
	zhiguadaima = String(zhigua_6_value) + String(zhigua_5_value) + String(zhigua_4_value) + String(zhigua_3_value) + String(zhigua_2_value) + String(zhigua_1_value);
	huguadaima = String(bengua_5_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_4_value) + String(bengua_3_value) + String(bengua_2_value);
	zongguadaima = String(bengua_1_value) + String(bengua_2_value) + String(bengua_3_value) + String(bengua_4_value) + String(bengua_5_value) + String(bengua_6_value);
	cuoguadaima = String(cuogua_6_value) + String(cuogua_5_value) + String(cuogua_4_value) + String(cuogua_3_value) + String(cuogua_2_value) + String(cuogua_1_value);
		
	//顯示爻象、當位與否、中正與否
	showYaoXiang ();
	//顯示文本
	document.getElementById('gua_view').style.display='';
	qiugua_resault_output();
	window.location.hash = "#gua_view";	
}


///////////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////多功能共同程序////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////
function showYaoXiang (){
	//顯示各卦（不含之卦）爻象
	if (Number(bengua_1_value) == 1)
	  {
	  document.getElementById("bengua_1").innerHTML = ("══════");
	  document.getElementById("zonggua_6").innerHTML = ("══════");
	  document.getElementById("cuogua_1").innerHTML = ("══　　══");
	  }
	else if (Number(bengua_1_value) == 0)
	  {
	  document.getElementById("bengua_1").innerHTML = ("══　　══");
	  document.getElementById("zonggua_6").innerHTML = ("══　　══");
	  document.getElementById("cuogua_1").innerHTML = ("══════");
	  }
	if (Number(bengua_2_value) == 1)
	  {
	  document.getElementById("bengua_2").innerHTML = ("══════");
	  document.getElementById("zonggua_5").innerHTML = ("══════");
	  document.getElementById("hugua_1").innerHTML = ("══════");
	  document.getElementById("cuogua_2").innerHTML = ("══　══");
	  }
	else if (Number(bengua_2_value) == 0)
	  {
	  document.getElementById("bengua_2").innerHTML = ("══　　══");
	  document.getElementById("zonggua_5").innerHTML = ("══　　══");
	  document.getElementById("hugua_1").innerHTML = ("══　　══");
	  document.getElementById("cuogua_2").innerHTML = ("══════");
	  }
	if (Number(bengua_3_value) == 1)
	  {
	  document.getElementById("bengua_3").innerHTML = ("══════");
	  document.getElementById("zonggua_4").innerHTML = ("══════");
	  document.getElementById("hugua_2").innerHTML = ("══════");
	  document.getElementById("hugua_4").innerHTML = ("══════");
	  document.getElementById("cuogua_3").innerHTML = ("══　　══");
	  }
	else if (Number(bengua_3_value) == 0)
	  {
	  document.getElementById("bengua_3").innerHTML = ("══　　══");
	  document.getElementById("zonggua_4").innerHTML = ("══　　══");
	  document.getElementById("hugua_2").innerHTML = ("══　　══");
	  document.getElementById("hugua_4").innerHTML = ("══　　══");
	  document.getElementById("cuogua_3").innerHTML = ("══════");
	  }
	if (Number(bengua_4_value) == 1)
	  {
	  document.getElementById("bengua_4").innerHTML = ("══════");
	  document.getElementById("zonggua_3").innerHTML = ("══════");
	  document.getElementById("hugua_3").innerHTML = ("══════");
	  document.getElementById("hugua_5").innerHTML = ("══════");
	  document.getElementById("cuogua_4").innerHTML = ("══　　══");
	  }
	else if (Number(bengua_4_value) == 0)
	  {
	  document.getElementById("bengua_4").innerHTML = ("══　　══");
	  document.getElementById("zonggua_3").innerHTML = ("══　　══");
	  document.getElementById("hugua_3").innerHTML = ("══　　══");
	  document.getElementById("hugua_5").innerHTML = ("══　　══");
	  document.getElementById("cuogua_4").innerHTML = ("══════");
	  }
	if (Number(bengua_5_value) == 1)
	  {
	  document.getElementById("bengua_5").innerHTML = ("══════");
	  document.getElementById("zonggua_2").innerHTML = ("══════");
	  document.getElementById("hugua_6").innerHTML = ("══════");
	  document.getElementById("cuogua_5").innerHTML = ("══　　══");		  
	  }
	else if (Number(bengua_5_value) == 0)
	  {
	  document.getElementById("bengua_5").innerHTML = ("══　　══");
	  document.getElementById("zonggua_2").innerHTML = ("══　　══");
	  document.getElementById("hugua_6").innerHTML = ("══　　══");
	  document.getElementById("cuogua_5").innerHTML = ("══════");
	  }
	if (Number(bengua_6_value) == 1)
	  {
	  document.getElementById("bengua_6").innerHTML = ("══════");
	  document.getElementById("zonggua_1").innerHTML = ("══════");
	  document.getElementById("cuogua_6").innerHTML = ("══　　══");	
	  }
	else if (Number(bengua_6_value) == 0)
	  {
	  document.getElementById("bengua_6").innerHTML = ("══　　══");
	  document.getElementById("zonggua_1").innerHTML = ("══　　══");
	  document.getElementById("cuogua_6").innerHTML = ("══════");	
	  }
	//顯示之卦爻象
	//之卦初爻象
	if (Number(zhigua_1_value) == 1)
	  {
	  document.getElementById("zhigua_1").innerHTML = ("══════");
	  }
	else if (Number(zhigua_1_value) == 0)
	  {
	  document.getElementById("zhigua_1").innerHTML = ("══　　══");
	  }
	//之卦二爻象
	if (Number(zhigua_2_value) == 1)
	  {
	  document.getElementById("zhigua_2").innerHTML = ("══════");
	  }
	else if (Number(zhigua_2_value) == 0)
	  {
	  document.getElementById("zhigua_2").innerHTML = ("══　　══");
	  }
	//之卦三爻象
	if (Number(zhigua_3_value) == 1)
	  {
	  document.getElementById("zhigua_3").innerHTML = ("══════");
	  }
	else if (Number(zhigua_3_value) == 0)
	  {
	  document.getElementById("zhigua_3").innerHTML = ("══　　══");
	  }
	//之卦四爻象
	if (Number(zhigua_4_value) == 1)
	  {
	  document.getElementById("zhigua_4").innerHTML = ("══════");
	  }
	else if (Number(zhigua_4_value) == 0)
	  {
	  document.getElementById("zhigua_4").innerHTML = ("══　　══");
	  }
	//之卦五爻象
	if (Number(zhigua_5_value) == 1)
	  {
	  document.getElementById("zhigua_5").innerHTML = ("══════");
	  }
	else if (Number(zhigua_5_value) == 0)
	  {
	  document.getElementById("zhigua_5").innerHTML = ("══　　══");
	  }
	//之卦上爻象
	if (Number(zhigua_6_value) == 1)
	  {
	  document.getElementById("zhigua_6").innerHTML = ("══════");
	  }
	else if (Number(zhigua_6_value) == 0)
	  {
	  document.getElementById("zhigua_6").innerHTML = ("══　　══");
	  }

	//顯示當位與否
	//本卦互卦綜卦錯卦當位與否：初爻
	if (Number(bengua_1_value) == 1)
	  {
	  document.getElementById("bengua_yao_1").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_6").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_1").innerHTML = ("不當位");
	  }
	else if (Number(bengua_1_value) == 0)
	  {
	  document.getElementById("bengua_yao_1").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_6").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_1").innerHTML = ("當位");
	  }  
	//本卦互卦綜卦錯卦當位與否：二爻
	if (Number(bengua_2_value) == 0)
	  {
	  document.getElementById("bengua_yao_2").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_5").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_2").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_1").innerHTML = ("不當位");
	  }
	else if (Number(bengua_2_value) == 1)
	  {
	  document.getElementById("bengua_yao_2").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_5").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_2").innerHTML = ("當位");
	  document.getElementById("hugua_yao_1").innerHTML = ("當位");
	  }
	//本卦互卦綜卦錯卦當位與否：三爻
	if (Number(bengua_3_value) == 1)
	  {
	  document.getElementById("bengua_yao_3").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_4").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_3").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_2").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_4").innerHTML = ("不當位"); 
	  }
	else if (Number(bengua_3_value) == 0)
	  {
	  document.getElementById("bengua_yao_3").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_4").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_3").innerHTML = ("當位");
	  document.getElementById("hugua_yao_2").innerHTML = ("當位");
	  document.getElementById("hugua_yao_4").innerHTML = ("當位");
	  }
	//本卦互卦綜卦錯卦當位與否：四爻
	if (Number(bengua_4_value) == 0)
	  {
	  document.getElementById("bengua_yao_4").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_3").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_4").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_3").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_5").innerHTML = ("不當位");
	  }
	else if (Number(bengua_4_value) == 1)
	  {
	  document.getElementById("bengua_yao_4").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_3").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_4").innerHTML = ("當位");
	  document.getElementById("hugua_yao_3").innerHTML = ("當位");
	  document.getElementById("hugua_yao_5").innerHTML = ("當位");
	  }
	//本卦互卦綜卦錯卦當位與否：五爻
	if (Number(bengua_5_value) == 1)
	  {
	  document.getElementById("bengua_yao_5").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_2").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_5").innerHTML = ("不當位");
	  document.getElementById("hugua_yao_6").innerHTML = ("不當位");
	  }
	else if (Number(bengua_5_value) == 0)
	  {
	  document.getElementById("bengua_yao_5").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_2").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_5").innerHTML = ("當位");
	  document.getElementById("hugua_yao_6").innerHTML = ("當位");
	  }
	//本卦互卦綜卦錯卦當位與否：上爻
	if (Number(bengua_6_value) == 0)
	  {
	  document.getElementById("bengua_yao_6").innerHTML = ("當位");
	  document.getElementById("zonggua_yao_1").innerHTML = ("不當位");
	  document.getElementById("cuogua_yao_6").innerHTML = ("不當位");
	  }
	else if (Number(bengua_6_value) == 1)
	  {
	  document.getElementById("bengua_yao_6").innerHTML = ("不當位");
	  document.getElementById("zonggua_yao_1").innerHTML = ("當位");
	  document.getElementById("cuogua_yao_6").innerHTML = ("當位");
	  }
	
	//之卦當位與否：初爻
	if (Number(zhigua_1_value) == 1)
	  {
	  document.getElementById("zhigua_yao_1").innerHTML = ("當位");
	  }
	else if (Number(zhigua_1_value) == 0)
	  {
	  document.getElementById("zhigua_yao_1").innerHTML = ("不當位");
	  }
	//之卦當位與否：二爻
	if (Number(zhigua_2_value) == 0)
	  {
	  document.getElementById("zhigua_yao_2").innerHTML = ("當位");
	  }
	else if (Number(zhigua_2_value) == 1)
	  {
	  document.getElementById("zhigua_yao_2").innerHTML = ("不當位");
	  }
	//之卦當位與否：三爻
	if (Number(zhigua_3_value) == 1)
	  {
	  document.getElementById("zhigua_yao_3").innerHTML = ("當位");
	  }
	else if (Number(zhigua_3_value) == 0)
	  {
	  document.getElementById("zhigua_yao_3").innerHTML = ("不當位");
	  }
	//之卦當位與否：四爻
	if (Number(zhigua_4_value) == 0)
	  {
	
	  document.getElementById("zhigua_yao_4").innerHTML = ("當位");
	  }
	else if (Number(zhigua_4_value) == 1)
	  {
	  document.getElementById("zhigua_yao_4").innerHTML = ("不當位");
	  }
	//之卦當位與否：五爻
	if (Number(zhigua_5_value) == 1)
	  {
	  document.getElementById("zhigua_yao_5").innerHTML = ("當位");
	  }
	else if (Number(zhigua_5_value) == 0)
	  {
	  document.getElementById("zhigua_yao_5").innerHTML = ("不當位");
	  }
	//之卦當位與否：上爻
	if (Number(zhigua_6_value) == 0)
	  {
	  document.getElementById("zhigua_yao_6").innerHTML = ("當位");
	  }
	else if (Number(zhigua_6_value) == 1)
	  {
	  document.getElementById("zhigua_yao_6").innerHTML = ("不當位");
	  }

	//顯示中正與否	  
	//本卦中正情形：二爻
	if (bengua_2_value == 0)
	  {
	  document.getElementById("bengua_zz_2").innerHTML = ("既中且正");
	  document.getElementById("zonggua_zz_5").innerHTML = ("柔中");
	  document.getElementById("cuogua_zz_2").innerHTML = ("剛中");
	  }
	else if (bengua_2_value == 1)
	  {
	  document.getElementById("bengua_zz_2").innerHTML = ("剛中");
	  document.getElementById("zonggua_zz_5").innerHTML = ("既中且正");
	  document.getElementById("cuogua_zz_2").innerHTML = ("既中且正");
	  }
	  
	//本卦中正情形：五爻
	if (bengua_5_value == 1)
	  {
	  document.getElementById("bengua_zz_5").innerHTML = ("既中且正");
	  document.getElementById("zonggua_zz_2").innerHTML = ("剛中");
	  document.getElementById("cuogua_zz_5").innerHTML = ("柔中");
	  }
	else if (bengua_5_value == 0)
	  {
	  document.getElementById("bengua_zz_5").innerHTML = ("柔中");
	  document.getElementById("zonggua_zz_2").innerHTML = ("既中且正");
	  document.getElementById("cuogua_zz_5").innerHTML = ("既中且正");
	  }
	
	//之卦中正情形：二爻
	if (zhigua_2_value == 0)
	  {
	  document.getElementById("zhigua_zz_2").innerHTML = ("既中且正");
	  }
	else if (zhigua_2_value == 1)
	  {
	  document.getElementById("zhigua_zz_2").innerHTML = ("剛中");
	  }
	  
	//之卦中正情形：五爻
	if (zhigua_5_value == 1)
	  {
	  document.getElementById("zhigua_zz_5").innerHTML = ("既中且正");
	  }
	else if (zhigua_5_value == 0)
	  {
	  document.getElementById("zhigua_zz_5").innerHTML = ("柔中");
	  }
	
	//互卦中正情形：二爻
	if (bengua_3_value == 0)
	  {
	  document.getElementById("hugua_zz_2").innerHTML = ("既中且正");
	  }
	else if (bengua_3_value == 1)
	  {
	  document.getElementById("hugua_zz_2").innerHTML = ("剛中");
	  }
	  
	//互卦中正情形：五爻
	if (bengua_4_value == 1)
	  {
	  document.getElementById("hugua_zz_5").innerHTML = ("既中且正");
	  }
	else if (bengua_4_value == 0)
	  {
	  document.getElementById("hugua_zz_5").innerHTML = ("柔中");
	  }  
}

////////////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////運算後顯示卦象/////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////
function qiugua_resault_output(){
	//輸出卦象符號＆哪些欄位要顯示
	//本卦
	switch (benguadaima)
	{
		case "111111":
		document.getElementById("bengua_read_ipt_gua").style.display='';
		document.getElementById("bengua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('bengua_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("bengua_read_ipt_gua").style.display='';
		document.getElementById("bengua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('bengua_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		default:
		document.getElementById("bengua_read_basic").style.display='';
		document.getElementById("bengua_read_baihua_basic").style.display='';
		document.getElementById("bengua_read_ipt_gua").style.display='none';
		document.getElementById("bengua_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('bengua_read_gua_pic').src = "assets/img/text_img/" + benguadaima + ".svg" ;
		break;
	}
	//之卦
	switch (zhiguadaima)
	{
		case "111111":
		document.getElementById("zhigua_read_ipt_gua").style.display='';
		document.getElementById("zhigua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('zhigua_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("zhigua_read_ipt_gua").style.display='';
		document.getElementById("zhigua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('zhigua_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		default:
		document.getElementById("zhigua_read_basic").style.display='';
		document.getElementById("zhigua_read_baihua_basic").style.display='';
		document.getElementById("zhigua_read_ipt_gua").style.display='none';
		document.getElementById("zhigua_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('zhigua_read_gua_pic').src = "assets/img/text_img/" + zhiguadaima + ".svg" ;
		break;
	}
	//互卦
	switch (huguadaima)
	{
		case "111111":
		document.getElementById("hugua_read_ipt_gua").style.display='';
		document.getElementById("hugua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('hugua_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("hugua_read_ipt_gua").style.display='';
		document.getElementById("hugua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('hugua_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		default:
		document.getElementById("hugua_read_basic").style.display='';
		document.getElementById("hugua_read_baihua_basic").style.display='';
		document.getElementById("hugua_read_ipt_gua").style.display='none';
		document.getElementById("hugua_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('hugua_read_gua_pic').src = "assets/img/text_img/" + huguadaima + ".svg" ;
		break;
	}
	//綜卦
	switch (zongguadaima)
	{
		case "111111":
		document.getElementById("zonggua_read_ipt_gua").style.display='';
		document.getElementById("zonggua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('zonggua_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("zonggua_read_ipt_gua").style.display='';
		document.getElementById("zonggua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('zonggua_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		default:
		document.getElementById("zonggua_read_basic").style.display='';
		document.getElementById("zonggua_read_baihua_basic").style.display='';
		document.getElementById("zonggua_read_ipt_gua").style.display='none';
		document.getElementById("zonggua_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('zonggua_read_gua_pic').src = "assets/img/text_img/" + zongguadaima + ".svg" ;
		break;
	}
	//錯卦
	switch (cuoguadaima)
	{
		case "111111":
		document.getElementById("cuogua_read_ipt_gua").style.display='';
		document.getElementById("cuogua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('cuogua_read_gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("cuogua_read_ipt_gua").style.display='';
		document.getElementById("cuogua_read_baihua_ipt_gua").style.display='';	
		document.getElementById('cuogua_read_gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		default:
		document.getElementById("cuogua_read_basic").style.display='';
		document.getElementById("cuogua_read_baihua_basic").style.display='';
		document.getElementById("cuogua_read_ipt_gua").style.display='none';
		document.getElementById("cuogua_read_baihua_ipt_gua").style.display='none';	
		document.getElementById('cuogua_read_gua_pic').src = "assets/img/text_img/" + cuoguadaima + ".svg" ;
		break;
	}

	//根據值定位
	//本卦
	var bengua_show = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(benguadaima);
	//之卦
	var zhigua_show = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(zhiguadaima);
	//互卦
	var hugua_show = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(huguadaima);
	//綜卦
	var zonggua_show = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(zongguadaima);
	//錯卦
	var cuogua_show = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(cuoguadaima);

	//輸出文本
	//本卦
	document.getElementById("bengua_read_zhouyi_title").innerHTML = zhouyi_text[bengua_show].title;
	document.getElementById("bengua_read_guaxiang").innerHTML = zhouyi_text[bengua_show].guaxiang;
	document.getElementById("bengua_read_guaxiang_baihua").innerHTML = zhouyi_text[bengua_show].guaxiang_baihua;
	document.getElementById("bengua_read_guaxiang_tuan").innerHTML = zhouyi_text[bengua_show].guaxiang_tuan;
	document.getElementById("bengua_read_guaxiang_tuan_baihua").innerHTML = zhouyi_text[bengua_show].guaxiang_tuan_baihua;
	document.getElementById("bengua_read_guaxiang_xiang").innerHTML = zhouyi_text[bengua_show].guaxiang_xiang;
	document.getElementById("bengua_read_guaxiang_xiang_baihua").innerHTML = zhouyi_text[bengua_show].guaxiang_xiang_baihua;
	document.getElementById("bengua_read_gdyd_gua").innerHTML = zhouyi_text[bengua_show].gdyd_gua;
	document.getElementById("bengua_read_one").innerHTML = zhouyi_text[bengua_show].one;
	document.getElementById("bengua_read_one_baihua").innerHTML = zhouyi_text[bengua_show].one_baihua;
	document.getElementById("bengua_read_one_xiang").innerHTML = zhouyi_text[bengua_show].one_xiang;
	document.getElementById("bengua_read_one_xiang_baihua").innerHTML = zhouyi_text[bengua_show].one_xiang_baihua;
	document.getElementById("bengua_read_gdyd_one").innerHTML = zhouyi_text[bengua_show].gdyd_one;
	document.getElementById("bengua_read_two").innerHTML = zhouyi_text[bengua_show].two;
	document.getElementById("bengua_read_two_baihua").innerHTML = zhouyi_text[bengua_show].two_baihua;
	document.getElementById("bengua_read_two_xiang").innerHTML = zhouyi_text[bengua_show].two_xiang;
	document.getElementById("bengua_read_two_xiang_baihua").innerHTML = zhouyi_text[bengua_show].two_xiang_baihua;
	document.getElementById("bengua_read_gdyd_two").innerHTML = zhouyi_text[bengua_show].gdyd_two;
	document.getElementById("bengua_read_three").innerHTML = zhouyi_text[bengua_show].three;
	document.getElementById("bengua_read_three_baihua").innerHTML = zhouyi_text[bengua_show].three_baihua;
	document.getElementById("bengua_read_three_xiang").innerHTML = zhouyi_text[bengua_show].three_xiang;
	document.getElementById("bengua_read_three_xiang_baihua").innerHTML = zhouyi_text[bengua_show].three_xiang_baihua;
	document.getElementById("bengua_read_gdyd_three").innerHTML = zhouyi_text[bengua_show].gdyd_three;
	document.getElementById("bengua_read_four").innerHTML = zhouyi_text[bengua_show].four;
	document.getElementById("bengua_read_four_baihua").innerHTML = zhouyi_text[bengua_show].four_baihua;
	document.getElementById("bengua_read_four_xiang").innerHTML = zhouyi_text[bengua_show].four_xiang;
	document.getElementById("bengua_read_four_xiang_baihua").innerHTML = zhouyi_text[bengua_show].four_xiang_baihua;
	document.getElementById("bengua_read_gdyd_four").innerHTML = zhouyi_text[bengua_show].gdyd_four;
	document.getElementById("bengua_read_five").innerHTML = zhouyi_text[bengua_show].five;
	document.getElementById("bengua_read_five_baihua").innerHTML = zhouyi_text[bengua_show].five_baihua;
	document.getElementById("bengua_read_five_xiang").innerHTML = zhouyi_text[bengua_show].five_xiang;
	document.getElementById("bengua_read_five_xiang_baihua").innerHTML = zhouyi_text[bengua_show].five_xiang_baihua;
	document.getElementById("bengua_read_gdyd_five").innerHTML = zhouyi_text[bengua_show].gdyd_five;
	document.getElementById("bengua_read_six").innerHTML = zhouyi_text[bengua_show].six;
	document.getElementById("bengua_read_six_baihua").innerHTML = zhouyi_text[bengua_show].six_baihua;
	document.getElementById("bengua_read_six_xiang").innerHTML = zhouyi_text[bengua_show].six_xiang;
	document.getElementById("bengua_read_six_xiang_baihua").innerHTML = zhouyi_text[bengua_show].six_xiang_baihua;
	document.getElementById("bengua_read_gdyd_six").innerHTML = zhouyi_text[bengua_show].gdyd_six;
	document.getElementById("bengua_read_yong").innerHTML = zhouyi_text[bengua_show].yong;
	document.getElementById("bengua_read_yong_baihua").innerHTML = zhouyi_text[bengua_show].yong_baihua;
	document.getElementById("bengua_read_wenyan").innerHTML = zhouyi_text[bengua_show].wenyan;
	document.getElementById("bengua_read_wenyan_baihua").innerHTML = zhouyi_text[bengua_show].wenyan_baihua;

	//之卦
	document.getElementById("zhigua_read_zhouyi_title").innerHTML = zhouyi_text[zhigua_show].title;
	document.getElementById("zhigua_read_guaxiang").innerHTML = zhouyi_text[zhigua_show].guaxiang;
	document.getElementById("zhigua_read_guaxiang_baihua").innerHTML = zhouyi_text[zhigua_show].guaxiang_baihua;
