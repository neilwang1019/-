//請求天機	
function god(){
	//定義四營之數（天機亂數）
	var syzs_value = [6, 7, 7, 7, 7, 7, 8, 8, 8, 8, 8, 8, 8, 9, 9, 9];
	const coin_audio = new Audio('assets/audio/coin.mp3'); //按銅板音效
	var syzs_value_random_1 = Math.floor(Math.random() * syzs_value.length);
	var syzs_value_random_2 = Math.floor(Math.random() * syzs_value.length);
	var syzs_value_random_3 = Math.floor(Math.random() * syzs_value.length);
	var syzs_value_random_4 = Math.floor(Math.random() * syzs_value.length);
	var syzs_value_random_5 = Math.floor(Math.random() * syzs_value.length);
	var syzs_value_random_6 = Math.floor(Math.random() * syzs_value.length);
	var godtime = ++firstgodtime;
	switch (godtime)
	{
		case 1:
		coin_audio.play();
		document.getElementById('yao1').value = syzs_value[syzs_value_random_1];
		break;
		case 2:
		coin_audio.play();
		document.getElementById('yao2').value = syzs_value[syzs_value_random_2];
		break;
		case 3:
		coin_audio.play();
		document.getElementById('yao3').value = syzs_value[syzs_value_random_3];
		break;
		case 4:
		coin_audio.play();
		document.getElementById('yao4').value = syzs_value[syzs_value_random_4];
		break;
		case 5:
		coin_audio.play();
		document.getElementById('yao5').value = syzs_value[syzs_value_random_5];
		break;
		case 6:
		coin_audio.play();
		document.getElementById('yao6').value = syzs_value[syzs_value_random_6];
		break;
		default:
		alert ("已取六爻，請點擊「確認求卦」或「清空重填」。");
		break;
	};
}

//六爻相關運算
function liuyao_function(){
	var liuyao_form_reault = document.forms["liuyao_form"];
	//驗證是否六次起爻都有填寫
	if (Number(liuyao_form_reault.yao1.value) == 0)
	{
	alert('第一次起爻未填寫結果。');
	return false;
	}
	else if (Number(liuyao_form_reault.yao2.value) == 0)
	{
	alert('第二次起爻未填寫結果。');
	return false;
	}
	else if (Number(liuyao_form_reault.yao3.value) == 0)
	{
	alert('第三次起爻未填寫結果。');
	return false;
	}
	else if (Number(liuyao_form_reault.yao4.value) == 0)
	{
	alert('第四次起爻未填寫結果。');
	return false;
	}
	else if (Number(liuyao_form_reault.yao5.value) == 0)
	{
	alert('第五次起爻未填寫結果。');
	return false;
	}
	else if (Number(liuyao_form_reault.yao6.value) == 0)
	{
	alert('第六次起爻未填寫結果。');
	return false;
	}
	/*定義與顯示四營之數
	var syzs = Number(liuyao_form_reault.yao1.value) + Number(liuyao_form_reault.yao2.value) + Number(liuyao_form_reault.yao3.value) + Number(liuyao_form_reault.yao4.value) + Number(liuyao_form_reault.yao5.value) + Number(liuyao_form_reault.yao6.value) ;
	var xjjg_value = 55-Number(syzs);	
	document.getElementById("syzs_1").innerHTML = (liuyao_form_reault.yao1.value);
	document.getElementById("syzs_2").innerHTML = (liuyao_form_reault.yao2.value);
	document.getElementById("syzs_3").innerHTML = (liuyao_form_reault.yao3.value);
	document.getElementById("syzs_4").innerHTML = (liuyao_form_reault.yao4.value);
	document.getElementById("syzs_5").innerHTML = (liuyao_form_reault.yao5.value);
	document.getElementById("syzs_6").innerHTML = (liuyao_form_reault.yao6.value);
	document.getElementById("syzs_value").innerHTML = (syzs);
	document.getElementById("xjjg").innerHTML = (xjjg_value);*/
