////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////閱讀文本////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////
function readtext(){
	//載入表單
	var form = document.forms["read_form"];
	var read_input = String(read_form.readtext_set.value);
	//根據值定位
	var read_daima = $.map(zhouyi_text, function(item, index) {
	  return item.id;
	}).indexOf(read_input);
	
	//輸出卦象符號＆哪些欄位要顯示
	switch (read_input)
	{
		case "111111":
		document.getElementById("ipt_gua").style.display='';
		document.getElementById("baihua_ipt_gua").style.display='';	
		document.getElementById("shiyi_div").style.display='none';
		document.getElementById("shiyi_baihua_div").style.display='none';
		document.getElementById('gua_pic').src = "assets/img/text_img/111111.svg" ;
		break;
		case "000000":
		document.getElementById("ipt_gua").style.display='';
		document.getElementById("baihua_ipt_gua").style.display='';	
		document.getElementById("shiyi_div").style.display='none';
		document.getElementById("shiyi_baihua_div").style.display='none';
		document.getElementById('gua_pic').src = "assets/img/text_img/000000.svg" ;
		break;
		case "700001":
		document.getElementById("basic").style.display='none';
		document.getElementById("baihua_basic").style.display='none';
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById("shiyi_div").style.display='';
		document.getElementById("shiyi_baihua_div").style.display='';
		document.getElementById('gua_pic').src = "assets/img/text_img/doc.svg" ;	
		break;
		case "700002":
		document.getElementById("basic").style.display='none';
		document.getElementById("baihua_basic").style.display='none';
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById("shiyi_div").style.display='';
		document.getElementById("shiyi_baihua_div").style.display='';
		document.getElementById('gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700003":
		document.getElementById("basic").style.display='none';
		document.getElementById("baihua_basic").style.display='none';
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById("shiyi_div").style.display='';
		document.getElementById("shiyi_baihua_div").style.display='';	
		document.getElementById('gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700004":
		document.getElementById("basic").style.display='none';
		document.getElementById("baihua_basic").style.display='none';
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById("shiyi_div").style.display='';
		document.getElementById("shiyi_baihua_div").style.display='';	
		document.getElementById('gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "700005":
		document.getElementById("basic").style.display='none';
		document.getElementById("baihua_basic").style.display='none';
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById("shiyi_div").style.display='';
		document.getElementById("shiyi_baihua_div").style.display='';
		document.getElementById('gua_pic').src = "assets/img/text_img/doc.svg" ;
		break;
		case "666666":
		return false;
		break;
		default:
		document.getElementById("basic").style.display='';
		document.getElementById("baihua_basic").style.display='';
		document.getElementById("shiyi_div").style.display='none';
		document.getElementById("shiyi_baihua_div").style.display='none';	
		document.getElementById("ipt_gua").style.display='none';
		document.getElementById("baihua_ipt_gua").style.display='none';	
		document.getElementById('gua_pic').src = "assets/img/text_img/" + read_input + ".svg" ;
		break;
	};
	//顯示文本頁
	document.getElementById('zhouyi_read_window').style.display='';
	window.location.hash = "#guahead";
	//輸出文本
	document.getElementById("zhouyi_title").innerHTML = zhouyi_text[read_daima].title;
	document.getElementById("guaxiang").innerHTML = zhouyi_text[read_daima].guaxiang;
	document.getElementById("guaxiang_baihua").innerHTML = zhouyi_text[read_daima].guaxiang_baihua;
	document.getElementById("guaxiang_tuan").innerHTML = zhouyi_text[read_daima].guaxiang_tuan;
	document.getElementById("guaxiang_tuan_baihua").innerHTML = zhouyi_text[read_daima].guaxiang_tuan_baihua;
	document.getElementById("guaxiang_xiang").innerHTML = zhouyi_text[read_daima].guaxiang_xiang;
	document.getElementById("guaxiang_xiang_baihua").innerHTML = zhouyi_text[read_daima].guaxiang_xiang_baihua;
	document.getElementById("gdyd_gua").innerHTML = zhouyi_text[read_daima].gdyd_gua;
	document.getElementById("one").innerHTML = zhouyi_text[read_daima].one;
	document.getElementById("one_baihua").innerHTML = zhouyi_text[read_daima].one_baihua;
	document.getElementById("one_xiang").innerHTML = zhouyi_text[read_daima].one_xiang;
	document.getElementById("one_xiang_baihua").innerHTML = zhouyi_text[read_daima].one_xiang_baihua;
	document.getElementById("gdyd_one").innerHTML = zhouyi_text[read_daima].gdyd_one;
	document.getElementById("two").innerHTML = zhouyi_text[read_daima].two;
	document.getElementById("two_baihua").innerHTML = zhouyi_text[read_daima].two_baihua;
	document.getElementById("two_xiang").innerHTML = zhouyi_text[read_daima].two_xiang;
	document.getElementById("two_xiang_baihua").innerHTML = zhouyi_text[read_daima].two_xiang_baihua;
	document.getElementById("gdyd_two").innerHTML = zhouyi_text[read_daima].gdyd_two;
	document.getElementById("three").innerHTML = zhouyi_text[read_daima].three;
	document.getElementById("three_baihua").innerHTML = zhouyi_text[read_daima].three_baihua;
	document.getElementById("three_xiang").innerHTML = zhouyi_text[read_daima].three_xiang;
	document.getElementById("three_xiang_baihua").innerHTML = zhouyi_text[read_daima].three_xiang_baihua;
	document.getElementById("gdyd_three").innerHTML = zhouyi_text[read_daima].gdyd_three;
	document.getElementById("four").innerHTML = zhouyi_text[read_daima].four;
	document.getElementById("four_baihua").innerHTML = zhouyi_text[read_daima].four_baihua;
	document.getElementById("four_xiang").innerHTML = zhouyi_text[read_daima].four_xiang;
	document.getElementById("four_xiang_baihua").innerHTML = zhouyi_text[read_daima].four_xiang_baihua;
	document.getElementById("gdyd_four").innerHTML = zhouyi_text[read_daima].gdyd_four;
	document.getElementById("five").innerHTML = zhouyi_text[read_daima].five;
	document.getElementById("five_baihua").innerHTML = zhouyi_text[read_daima].five_baihua;
	document.getElementById("five_xiang").innerHTML = zhouyi_text[read_daima].five_xiang;
	document.getElementById("five_xiang_baihua").innerHTML = zhouyi_text[read_daima].five_xiang_baihua;
	document.getElementById("gdyd_five").innerHTML = zhouyi_text[read_daima].gdyd_five;
	document.getElementById("six").innerHTML = zhouyi_text[read_daima].six;
	document.getElementById("six_baihua").innerHTML = zhouyi_text[read_daima].six_baihua;
	document.getElementById("six_xiang").innerHTML = zhouyi_text[read_daima].six_xiang;
	document.getElementById("six_xiang_baihua").innerHTML = zhouyi_text[read_daima].six_xiang_baihua;
	document.getElementById("gdyd_six").innerHTML = zhouyi_text[read_daima].gdyd_six;
	document.getElementById("yong").innerHTML = zhouyi_text[read_daima].yong;
	document.getElementById("yong_baihua").innerHTML = zhouyi_text[read_daima].yong_baihua;
	document.getElementById("wenyan").innerHTML = zhouyi_text[read_daima].wenyan;
	document.getElementById("wenyan_baihua").innerHTML = zhouyi_text[read_daima].wenyan_baihua;
	document.getElementById("shiyi").innerHTML = zhouyi_text[read_daima].text;
	document.getElementById("shiyi_baihua").innerHTML = zhouyi_text[read_daima].text_baihua;
