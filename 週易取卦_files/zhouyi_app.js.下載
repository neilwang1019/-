//六爻起卦介面
function liuyao_set(){
	document.getElementById('liuyao_set').style.display='';
	document.getElementById('gua_view').style.display='none';
	document.getElementById('time_set').style.display='none';
	document.getElementById('number_set').style.display='none';
	document.getElementById('read_set').style.display='none';
	document.getElementById('about_section').style.display='none';
	document.getElementById('how_section').style.display='none';
	document.getElementById('hero').style.height='0vh';
	}
//時辰起卦介面
